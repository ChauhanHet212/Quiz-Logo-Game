<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".GameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/main_background_header">

        <ImageView
            android:id="@+id/backBtn3"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:padding="12dp"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:id="@+id/logo_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="logo"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/previousBtn"
            android:layout_width="30dp"
            android:layout_height="200dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"/>

        <ImageView
            android:id="@+id/quiz_logo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:src="@drawable/ask_b"/>

        <ImageView
            android:id="@+id/nextBtn"
            android:layout_width="30dp"
            android:layout_height="200dp"
            android:src="@drawable/baseline_arrow_forward_ios_24"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ans0"
            style="@style/btnStyle2"/>

        <TextView
            android:id="@+id/ans1"
            android:layout_marginStart="4dp"
            style="@style/btnStyle2"/>

        <TextView
            android:id="@+id/ans2"
            android:layout_marginStart="4dp"
            style="@style/btnStyle2"/>

        <TextView
            android:id="@+id/ans3"
            android:layout_marginStart="4dp"
            style="@style/btnStyle2"/>

        <TextView
            android:id="@+id/ans4"
            android:layout_marginStart="4dp"
            style="@style/btnStyle2"/>

        <TextView
            android:id="@+id/ans5"
            android:layout_marginStart="4dp"
            style="@style/btnStyle2"/>

        <TextView
            android:id="@+id/ans6"
            android:layout_marginStart="4dp"
            style="@style/btnStyle2"/>

        <TextView
            android:id="@+id/ans7"
            android:layout_marginStart="4dp"
            style="@style/btnStyle2"/>

        <TextView
            android:id="@+id/ans8"
            android:layout_marginStart="4dp"
            style="@style/btnStyle2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clearBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/clear_btn"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/removeBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/remove_btn"
            app:backgroundTint="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/btn0"
            style="@style/btnStyle"/>

        <TextView
            android:id="@+id/btn1"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn2"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn3"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn4"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn5"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn6"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="8dp">

        <TextView
            android:id="@+id/btn7"
            style="@style/btnStyle"/>

        <TextView
            android:id="@+id/btn8"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn9"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn10"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn11"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn12"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/btn13"
            style="@style/btnStyle"
            android:layout_marginStart="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/win"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:background="@drawable/game_complete_background_green">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Good"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>

        <Button
            android:id="@+id/nextLogoBtn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            app:backgroundTint="@null"
            android:background="@drawable/okbtn_bg"
            android:text="Next"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>